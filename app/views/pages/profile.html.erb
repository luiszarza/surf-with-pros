<div class="container" id="profile">
  <div class="bookings">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">My Booking Requests</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">My Classes</button>
      </li>
    </ul>

    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
        <% if @my_bookings.present? %>
          <% @my_bookings.each do |booking|%>
            <%= render 'shared/booking_preview', booking: booking %>
          <% end %>
        <% else %>
            <p>You have no booking requests</p>
        <% end %>
      </div>
      <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
        <% if @my_bookings_as_student.present? %>
          <% @my_bookings_as_student.each do |booking| %>
            <%= render 'shared/booking_preview', booking: booking %>
          <% end %>
        <% else %>
            <p>You have no booking requests</p>
        <% end %>
      </div>
    </div>
  </div>
  <%# <div style="border-left:1px solid #000;height:100%"></div> %>
  <div class="profile-side">
    <div class="profile-details">
      <p class="strong"><strong>Email:</strong> <%= @user.email %></p>
      <p class="strong"><strong>Name</strong>: <%= @user.first_name %></p>
      <%= link_to "Edit Profile", edit_user_registration_path %>
    </div>
    <div>
    <% if @my_listings.present? %>
      <h2>My Listings</h2>
        <% @my_listings.each do |listing| %>
          <%= render 'shared/listing_preview', listing: listing %>
        <% end %>
    <% end %>
    </div>
  </div>
</div>
