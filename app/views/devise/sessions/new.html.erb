<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-5">
              <h2 class="text-center mb-4">Log in</h2>
                      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
            </div>
            <div class="mb-3">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Password" } %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="mb-3">
                <%= f.input :remember_me, as: :boolean, label: false %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>
            <div class="d-grid gap-2">
              <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= link_to "Sign up", new_user_registration_path, class: "mx-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
