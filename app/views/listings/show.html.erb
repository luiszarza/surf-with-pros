<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-8">
      <div class="card mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <%= link_to "Go back", listings_path, class: "btn btn-success text-white" %>
          <h1 class="text-center mb-0"><%= @listing.title %></h1>
          <div></div> <!-- placeholder div to keep the layout consistent -->
        </div>
        <div class="card-body">
          <p class="mb-3"><%= @listing.location %></p>
          <div class="row">
            <div class="col-6">
              <div class="card">
                <img src="https://images.unsplash.com/photo-1502680390469-be75c86b636f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" class="card-img-top" alt="...">
              </div>
            </div>
            <div class="col-6">
              <div class="card">
                <img src="https://images.unsplash.com/photo-1509914398892-963f53e6e2f1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" class="card-img-top" alt="...">
              </div>
            </div>
          </div>
          <p class="mb-4"><%= @listing.content %></p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card mb-4">
        <div class="card-body bg-white">
          <h4 class="mb-5">$<%= @listing.price  %></h4>
          <%= link_to "Book", "#" , class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
