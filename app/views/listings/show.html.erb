<div class="container py-5">
  <div class="row align-items-stretch">
    <div class="col-12">
      <div class="card mb-4 rounded-3">
        <div class="card-header bg-white d-flex justify-content-between align-items-center border-white">
          <h1 class="text-center mb-0"><%= @listing.title %></h1>
          <%= link_to "Go back", listings_path, class: "btn-blue" %>
        </div>
        <div class="card-body border border-0">
          <p class="mb-3"><%= @listing.location %></p>
          <div class="row">
            <div class="col-6">
              <div class="card border border-0">
                <img src="https://source.unsplash.com/random/650x430/?surfer/" class="card-img-top rounded-4" alt="...">
              </div>
            </div>
            <div class="col-6">
              <div class="card border border-0">
                <img src="https://source.unsplash.com/random/650x430/?surf/" class="card-img-top rounded-4 " alt="...">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
     <div class="card">
        <div class="card-body border border-0">
          <h3><%= @listing.content %></h3>
        </div>
     </div>
    </div>
    <div class="col-4">
      <div class="card mb-4">
        <div class="card-body bg-white">
          <h4 class="mb-3">$<%= @listing.price  %></h4>
          <%= simple_form_for [@listing, @booking] do |f| %>
            <%= f.input :date %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
