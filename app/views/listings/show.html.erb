<div class="container py-5">
  <div class="row align-items-stretch">
    <div class="col-12">
      <div class="card-show mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center border-white">
          <h1 class="text-center mb-0"><%= @listing.title %></h1>
          <% if current_user == @listing.user %>
          <%= link_to "Edit listing", edit_listing_path %>
          <% end %>
          <%= link_to "Go back", listings_path %>

        </div>
        <div class="card-body border border-0 mb-2">
          <p class="my-2"><i class="fa-sharp fa-solid fa-location-dot"></i> <%= @listing.location %></p>
          <p class="my-2"><i class="fa-solid fa-user"></i> Teacher's name: <%= @listing.user.first_name %></p>

          <div class="row">
              <% if @listing.photos.attached? %>
                  <% @listing.photos.each do |photo| %>
                    <div class="col-6">
                      <div class="card border border-0">
                        <%= cl_image_tag photo.key, crop: :fill, class:"card-img-top img-listing-ins rounded-4" %>
                      </div>
                    </div>
                  <% end %>
               <% else %>
            <div class="col-6">
              <div class="card border border-0">
                <img src="https://source.unsplash.com/random/650x430/?surfer/" class="card-img-top rounded-4" alt="...">
              </div>
            </div>
            <div class="col-6">
              <div class="card border border-0">
                <img src="https://source.unsplash.com/random/650x430/?surf/" class="card-img-top rounded-4 " alt="...">
              </div>
            </div>
               <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
     <div class="card-blue">
        <div class="card-body">
          <h3><%= @listing.content %></h3>
        </div>
     </div>
    </div>
    <div class="col-4">
      <div class="card-blue mb-4">
        <div class="card-body bg-white">
          <h4 class="mb-3">$<%= @listing.price  %></h4>
          <%= simple_form_for [@listing, @booking] do |f| %>
            <%= f.input :date, class: "date-input" %>
            <%= f.submit class: "btn-blue border-0" %>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
